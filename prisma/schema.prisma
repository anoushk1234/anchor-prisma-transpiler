// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EventAccount {
  pubkey               String    @id
  title                String
  description          String
  uri                  String
  link                 String
  fee                  String
  seats                String
  occupiedSeats        String
  date                 String
  collection           String
  venue                String
  authority            String
  creators             String[]
  eventHost            EventHost @relation(fields: [eventHostEventHostId], references: [EventHostId])
  eventHostId          String
  eventNonce           String
  bump                 String
  isCutPayedByCreator  String
  isCustomSplToken     String
  customSplToken       String
  eventHostEventHostId String
}

model EventHostAccount {
  pubkey               String    @id
  eventHostStruct      EventHost @relation(fields: [eventHostEventHostId], references: [EventHostId])
  eventHostStructId    String
  eventHostEventHostId String
}

model AdminAccount {
  pubkey           String   @id
  admins           String[]
  bump             String
  authority        String
  verifiedPartners String[]
}

model EventHost {
  EventHostId      String             @id @default(uuid())
  eventsCreated    String[]
  displayName      String
  pubKey           String
  profileImage     String
  eventCount       String
  bump             String
  EventAccount     EventAccount[]
  EventHostAccount EventHostAccount[]
}
